<Window x:Class="FileManager.Setting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileManager"
        mc:Ignorable="d"
        Title="Setting" Height="410" Width="560">
    <StackPanel >
        <ListBox x:Name="container">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Label Width="160" VerticalAlignment="Center" Content="{Binding Path=FolderName}"></Label>
                        <TextBox Text="{Binding Path=FolderPath}" Margin="5" Width="280" Padding="5" VerticalAlignment="Center" AcceptsReturn="True" TextWrapping="Wrap"/>
                        <Button Width="60" Height="25" Click="OnClickButton">选择</Button>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </StackPanel>
</Window>
