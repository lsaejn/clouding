<Application x:Class="WpfControlTemplate.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WpfControlTemplate"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/WpfControlTemplate;component/ButtonStyle.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/WpfControlTemplate;component/ListBoxStyle.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/WpfControlTemplate;component/ListBoxItemStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
